{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS Mocha File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "args": ["-r", "ts-node/register", "${file}"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
